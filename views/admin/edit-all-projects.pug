extends index 

block content
    script(src="/javascripts/edit-all-projects.js" defer)
    script(src='/sortablejs/Sortable.js' defer)
    script(src='/javascripts/sortable.js' defer)
    
    - const parsedData = JSON.parse(data);
    
    div#all-projects-page-container
        h1=title 

        ul#all-projects-container
            each project in parsedData
                li
                    a(href=`./add-project/${project.slug}`)
                        div
                            h1= project.client_name
                            h2= project.project_name

                            p: a(href=`/portfolio/${project.slug}`) View live version

                            button#show-delete-project-dialog-button(type="button" data-id=project.project_id data-slug=project.slug) Delete this project

        div#all-projects-popup.hidden   

