extends layout

block content
    script(type='text/javascript').
        var data = !{JSON.stringify(data)}
        //- console.log(data);

    nav
        ul 
            a(href='./portfolio')
                li Work
            a(href='./about')
                li About
            a(href='./contact')
                li Contact
    div(id="home-main-section")

        h1(id="home-main-header") Meir Unger
        p(id="home-main-tagline") I visualize your message through a range of communicative media, using a touch of drama.

        a(id="home-main-projects-button") See it

    div 
        each project in data
            a(href=`./portfolio/${project.slug}`)
                div
                    h1= project.client_name
                    h2= project.project_name

    a(href='./portfolio') Work

